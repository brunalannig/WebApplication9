@model IEnumerable<WebApplication9.Models.Pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>
<form asp-controller="Pessoas" asp-action="FiltroEstadoCivil">
    <p>
        <select asp-items="@ViewBag.pDescricao" name="p_nome"><option></option></select>


        Valor: <input type="text" name="criteriobusca" />
        <input type="submit" value="filtrar" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdEstadoCivil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Idade)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdEstadoCivil)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Idade)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPessoa">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPessoa">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdPessoa">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
